<system name="flight_control">

	<channel name="Elevator">

		<switch name="T4T/execute">
			<default value="0"/>
			<test value="1">
				sim-time-sec GT 1
			</test>
			<output>T4T/execute</output>		
		</switch>	
	
		<aerosurface_scale name="Elevator angle Control">
			<input>fcs/elevator-cmd-norm</input>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/elevator-pos-norm</output>
		</aerosurface_scale>
		<aerosurface_scale name="Elevator trim">
			<input>fcs/pitch-trim-cmd-norm</input>
			<range>
				<min>-1.0</min>
				<max>1.0</max>
			</range>
			<clipto>
				<min>-0.13</min> <!-- down 13% -->
				<max>0.28</max> <!-- up 28% -->
			</clipto>
			<output>fcs/pitch-trim-pos-norm</output>
		</aerosurface_scale>
		<summer name="Elevator position">
			<input>fcs/elevator-pos-norm</input>
			<input>fcs/pitch-trim-pos-norm</input>
			<clipto>
				<min>-1.0</min>
				<max>1.0</max>
			</clipto>
			<output>fcs/elevator-pos-norm</output>
		</summer>
		
	</channel>

	
	<channel name="Aileron">
	
		<aerosurface_scale name="left Aileron angle Control">
			<input>fcs/aileron-cmd-norm</input>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/left-aileron-pos-norm</output>
		</aerosurface_scale>

		<aerosurface_scale name="right Aileron angle Control">
			<input>-fcs/aileron-cmd-norm</input>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/right-aileron-pos-norm</output>
		</aerosurface_scale>
		
	</channel>

	
	<channel name="Rudder">
	
		<aerosurface_scale name="Rudder angle Control">
			<input>fcs/rudder-cmd-norm</input>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/rudder-pos-norm</output>
		</aerosurface_scale>
		
	</channel>
	
	
	<channel name="Flaps">
	
		<kinematic name="Flaps Control">
			<input>fcs/flap-cmd-norm</input>
				<traverse>
					<setting>
						<position> 0 </position>
						<time>     0 </time>
					</setting>
					<setting>
						<position>0.5</position>
						<time>     3 </time>
					</setting>
					<setting>
						<position> 1 </position>
						<time>     5 </time>
					</setting>
				</traverse>
			<output>fcs/flap-pos-norm</output>
		</kinematic>

	</channel>

</system>